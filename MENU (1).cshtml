    <!-- دکمه‌های ناوبری -->
    <div class="d-flex justify-content-between mt-4 nav-buttons">
        @Html.AntiForgeryToken()
        <!-- دکمه قبلی -->
        <a href="/Home/PICTURES" class="btn btn-outline-danger">
